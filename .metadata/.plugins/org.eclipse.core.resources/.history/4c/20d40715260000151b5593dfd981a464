<script>
	var myForm;
	var dhxWins;
	function doOnLoad() {
		dhxWins = new dhtmlXWindows();
		var login_window = dhxWins.createWindow("loginWindow", 0, 0, 380, 250);
		login_window.setText("Ingreso");
		login_window.centerOnScreen();
// 		login_window.button('park').hide();
// 		login_window.button('minmax').hide();
// 		login_window.button('close').hide();

		
		myForm = login_window.attachForm();
		myForm.loadStruct("xml/login_form.xml");
		myForm.attachEvent("onButtonClick", function(id){
		    alert("Button with name "+id+" was clicked");
		    if(id == "login"){
		    	myForm.send("Home.do","post");
		    	  //or
// 		    	muForm.send("some.php","get",function(loader, response){
// 		    	  alert("Saved");
// 		    	});
// 		    	login_form.submit();
		    }
		});
	}
</script>
