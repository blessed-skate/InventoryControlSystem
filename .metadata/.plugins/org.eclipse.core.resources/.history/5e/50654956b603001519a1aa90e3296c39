function showResponseXmlAlertError(msg) {
	dhtmlx.alert({
		title : "Error",
		type : "alert-error",
		text : msg
	});
}

function showResponseXmlAlertWarning(msg) {
	dhtmlx.alert({
		title : "Warning",
		type : "alert-warning",
		text : msg
	});
}
function showResponseXmlAlert(msg) {
	dhtmlx.alert({
		title : "Alert",
		type : "alert",
		text : msg
	});
}

function showConfirmWarning(title, question) {
	dhtmlx.alert({
		title : title,
		type : "confirm-warning",
		text : question,
		callback : function(result) {
			dhtmlx.message("Result: " + result)
		}
	});
}

function showConfirmError(title, question) {
	dhtmlx.alert({
		title : title,
		type : "confirm-error",
		text : question,
		callback : function(result) {
			dhtmlx.message("Result: " + result)
		}
	});
}

function showConfirm(title, question) {
	dhtmlx.alert({
		title : title,
		type : "confirm",
		text : question,
		callback : function(result) {
			dhtmlx.message("Result: " + result)
		}
	});
}

function showError(msg) {
	dhtmlx.alert({
		title : "Error",
		type : "alert-error",
		text : msg
	});
}
