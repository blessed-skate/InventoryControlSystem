package mx.com.icsp.persistence.dao;

import java.util.List;
import java.util.Map;

import mx.com.icsc.common.Asset;

import org.apache.ibatis.annotations.Insert;
import org.apache.ibatis.annotations.Options;
import org.apache.ibatis.annotations.Select;
import org.apache.ibatis.mapping.StatementType;

public interface CatalogDao {

	static final String SELMATERIAL = "";
	static final String SELCOLOR = "";
	static final String SELASSETTYPE = "";
	
	@Select(SELMATERIAL)
	@Options(statementType = StatementType.CALLABLE)
	public abstract List<Asset> getMaterial(Map<String, Object> params);

	@Select(SELCOLOR)
	@Options(statementType = StatementType.CALLABLE)
	public abstract Asset getColor(Map<String, Object> params);

	@Insert(SELASSETTYPE)
	@Options(statementType = StatementType.CALLABLE)
	public abstract int getAssetType(Asset asset);
	
	
}
